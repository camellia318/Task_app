<h1 class="display-4 text-primary">スケジュールの追加<br>Tasks#add</h1>
<p>※登録するデータを入力して下さい</p>
<%= form_for(@task, url:{controller:'tasks', action:'add'}) do |form| %>
  <div class="form-group">
    <label for="title">タイトル</label>
    <%= form.text_field :title,{class:"form-control"} %>
  </div>
  <div class="form-group">
    <label for="start_date">開始日</label>
    <%= form.date_field :start_date,{class:"form-control"} %>
  </div>
  <div class="form-group">
    <label for="end_date">終了日</label>
    <%= form.date_field :end_date,{class:"form-control"} %>
  </div>
  <div class="form-group">
    <label for="update_date">更新日</label>
    <%= form.date_field :update_date,{class:"form-control"} %>
  </div>
  <div class="form-group">
    <label for="memo">コメント</label>
    <%= form.text_area :memo,{rows:5,class:"form-control"} %>
  </div>
  <%= form.submit "保存" %>
<% end %>
<p class="link"><a href="/tasks">&lt;&lt; ※トップページに戻る</a></p>
