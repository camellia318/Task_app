<h1>スケジュールの編集<br>Tasks#edit</h1>
<p>※「<%= @task.title %>」の内容を編集します</p>
<%= form_for(@task, url:{controller:'tasks', action:'edit', id:@task.id}) do |form| %>
  <div class="form-group">
    <label for="title">タイトル</label>
    <%= form.text_field :title,{class:"form-control"} %>
  </div>
  <div class="form-group">
    <label for="start_date">開始日</label>
    <%= form.date_field :start_date,{class:"form-control"} %>
  </div>
  <div class="form-group">
    <label for="end_date">終了日</label>
    <%= form.date_field :end_date,{class:"form-control"} %>
  </div>
  <div class="form-group">
    <label for="update_date">更新日</label>
    <%= form.date_field :update_date,{class:"form-control"} %>
  </div>
  <div class="form-group">
    <label for="memo">コメント</label>
    <%= form.text_area :memo,{rows:5,class:"form-control"} %>
  </div>
  <%= form.submit "更新" %>
<% end %>
<p class="link"><a href="/tasks">&lt;&lt; ※トップページに戻る</a></p>